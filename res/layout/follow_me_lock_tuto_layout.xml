<?xml version="1.0" encoding="utf-8"?>
<merge>
    <LinearLayout
        n1:gravity="center_vertical"
        n1:orientation="vertical"
        n1:layout_width="0.0dip"
        n1:layout_height="wrap_content"
        n1:layout_weight="1.0"
        n1:layout_marginEnd="@dimen/follow_me_tuto_margin"
        xmlns:n1="http://schemas.android.com/apk/res/android">
        <TextView
            n1:textColor="@color/green"
            n1:gravity="left"
            n1:id="@id/text_follow_me_lock_tuto_title"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginTop="@dimen/follow_me_tuto_margin"
            n1:text="@string/follow_me_first_use_lock_button_title"
            n1:textAllCaps="true" />
        <TextView
            n1:textColor="@color/white"
            n1:gravity="left"
            n1:id="@id/text_follow_me_lock_tuto_description"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginTop="@dimen/follow_me_tuto_margin"
            n1:text="@string/follow_me_first_use_lock_button_description" />
        <Button
            n1:textColor="@color/green"
            n1:gravity="center"
            n1:layout_gravity="center_horizontal"
            n1:id="@id/button_follow_me_lock_tuto_got_it"
            n1:background="@drawable/got_it_button_selector"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginTop="@dimen/follow_me_tuto_margin"
            n1:minWidth="@dimen/got_it_button_min_width"
            n1:minHeight="0.0dip"
            n1:text="@string/got_it"
            n1:paddingStart="@dimen/got_it_button_horizontal_padding"
            n1:paddingEnd="@dimen/got_it_button_horizontal_padding" />
    </LinearLayout>
    <LinearLayout
        n2:gravity="center"
        n2:layout_width="0.0dip"
        n2:layout_height="wrap_content"
        n2:layout_weight="1.0"
        xmlns:n2="http://schemas.android.com/apk/res/android">
        <VideoView
            n2:id="@id/video_view_follow_me_lock_tuto"
            n2:layout_width="@dimen/follow_me_lock_tuto_video_size"
            n2:layout_height="@dimen/follow_me_lock_tuto_video_size" />
    </LinearLayout>
</merge>