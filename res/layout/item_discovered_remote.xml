<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    n1:background="@drawable/background_gamepad_item"
    n1:layout_width="fill_parent"
    n1:layout_height="@dimen/homepage_status_bar_height"
    n1:layout_marginTop="@dimen/discovered_item_marginTop"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <View
        n1:id="@id/view_known_status"
        n1:background="@drawable/round_accent_filled_drawable"
        n1:layout_width="@dimen/discovered_item_known_status_size"
        n1:layout_height="@dimen/discovered_item_known_status_size"
        n1:layout_centerVertical="true"
        n1:layout_marginStart="@dimen/discovered_item_known_status_marginStart" />
    <TextView
        n1:textColor="@android:color/white"
        n1:gravity="center_vertical"
        n1:id="@id/text_remote_name"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:layout_marginStart="@dimen/discovered_item_name_marginStart"
        n1:layout_toEndOf="@id/view_known_status" />
    <TextView
        n1:textColor="@color/colorText"
        n1:gravity="center"
        n1:id="@id/text_no_remotes"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:text="@string/no_remotes"
        n1:textAllCaps="true"
        n1:layout_marginStart="@dimen/discovered_item_name_marginStart"
        n1:layout_toEndOf="@id/view_known_status" />
</RelativeLayout>