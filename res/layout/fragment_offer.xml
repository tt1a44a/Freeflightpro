<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:paddingStart="@dimen/registration_page_horizontal_margin"
    n1:paddingEnd="@dimen/registration_page_horizontal_margin"
    n1:layout_alignParentEnd="true"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <ImageView
        n1:id="@id/image_offer"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:scaleType="centerCrop"
        n1:adjustViewBounds="true" />
    <TextView
        n1:textSize="@dimen/announcements_tag_text_size"
        n1:textColor="@color/white"
        n1:gravity="bottom"
        n1:id="@id/text_tag_view"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_marginBottom="@dimen/announcements_tag_vertical_margin"
        n1:layout_above="@id/text_title_view"
        n1:layout_centerVertical="true"
        n1:textAllCaps="true"
        n1:paddingStart="@dimen/announcements_tag_vertical_padding"
        n1:paddingEnd="@dimen/announcements_tag_vertical_padding"
        n1:layout_marginStart="@dimen/announcements_horizontal_margin"
        n1:layout_alignParentStart="true" />
    <TextView
        n1:textSize="@dimen/announcements_title_text_size"
        n1:textColor="@color/white"
        n1:gravity="bottom"
        n1:id="@id/text_title_view"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_above="@id/text_subtitle_view"
        n1:layout_marginStart="@dimen/announcements_horizontal_margin"
        n1:layout_toStartOf="@id/button_open_offer"
        n1:layout_alignParentStart="true" />
    <TextView
        n1:textSize="@dimen/announcements_subtitle_text_size"
        n1:textColor="@color/white"
        n1:gravity="bottom"
        n1:id="@id/text_subtitle_view"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_marginBottom="@dimen/announcements_vertical_margin"
        n1:layout_alignParentBottom="true"
        n1:layout_marginStart="@dimen/announcements_horizontal_margin"
        n1:layout_toStartOf="@id/button_open_offer"
        n1:layout_alignParentStart="true" />
    <Button
        n1:textColor="@color/green"
        n1:id="@id/button_open_offer"
        n1:background="@drawable/button_green_selector"
        n1:layout_width="wrap_content"
        n1:layout_height="@dimen/flight_plan_free_trial_buttons_height"
        n1:layout_margin="@dimen/announcements_horizontal_margin"
        n1:layout_alignParentBottom="true"
        n1:paddingStart="@dimen/flight_plan_free_trial_buttons_horizontal_padding"
        n1:paddingEnd="@dimen/flight_plan_free_trial_buttons_horizontal_padding"
        n1:layout_alignParentEnd="true" />
</RelativeLayout>