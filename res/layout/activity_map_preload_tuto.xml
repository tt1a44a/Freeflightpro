<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    n1:id="@id/layout_map_preload_tuto"
    n1:background="@drawable/background"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <ImageButton
        n1:id="@id/button_map_preload_tuto_back"
        n1:background="@drawable/circular_button_background"
        n1:layout_width="@dimen/piloting_button_size"
        n1:layout_height="@dimen/piloting_button_size"
        n1:layout_margin="@dimen/piloting_buttons_margin"
        n1:src="@drawable/drawable_hud_back"
        n1:scaleType="centerInside"
        n1:layout_alignParentTop="true"
        n1:layout_alignParentStart="true" />
    <LinearLayout
        n1:orientation="vertical"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_centerInParent="true"
        n2:layout_widthPercent="@fraction/map_preload_tuto_width"
        xmlns:n2="http://schemas.android.com/apk/res-auto">
        <TextView
            n1:textSize="@dimen/home_title_text_size"
            n1:gravity="center"
            n1:layout_gravity="center_horizontal"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginBottom="@dimen/map_preload_tuto_margin"
            n1:text="@string/map_preload_title"
            n1:textAllCaps="true" />
        <TextView
            n1:gravity="center"
            n1:layout_gravity="center_horizontal"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginBottom="@dimen/map_preload_tuto_margin"
            n1:text="@string/map_preload_tuto_content" />
        <Button
            n1:textColor="@color/colorAccent"
            n1:layout_gravity="center_horizontal"
            n1:id="@id/button_map_preload_tuto_ok"
            n1:background="@drawable/button_selector"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:text="@string/got_it"
            n1:paddingStart="@dimen/gamepad_mapping_button_padding"
            n1:paddingEnd="@dimen/gamepad_mapping_button_padding"
            style="@style/SettingsButton" />
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>