<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    n1:background="@android:color/transparent"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <LinearLayout
        n1:layout_gravity="center_horizontal"
        n1:orientation="horizontal"
        n1:id="@id/layout_bottom_axes"
        n1:visibility="visible"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_marginTop="@dimen/activity_vertical_margin"
        n1:layout_marginBottom="@dimen/activity_horizontal_margin">
        <LinearLayout
            n1:gravity="center_vertical"
            n1:orientation="horizontal"
            n1:id="@id/layout_calibration_pitot"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginEnd="@dimen/calibration_axis_margin">
            <FrameLayout
                n1:layout_width="@dimen/settings_checkbox_size"
                n1:layout_height="@dimen/settings_checkbox_size"
                n1:layout_marginEnd="@dimen/calibration_checkbox_margin">
                <ImageView
                    n1:id="@id/icon_pitot_background"
                    n1:visibility="gone"
                    n1:layout_width="fill_parent"
                    n1:layout_height="fill_parent"
                    n1:src="@drawable/calibration_checkbox_filled" />
                <ImageView
                    n1:id="@id/icon_pitot"
                    n1:layout_width="fill_parent"
                    n1:layout_height="fill_parent"
                    n1:src="@drawable/calibration_checkbox" />
            </FrameLayout>
            <TextView
                n1:textSize="@dimen/settings_text_size"
                n1:layout_gravity="center_vertical"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:text="@string/pitot_tube"
                n1:textAllCaps="true" />
        </LinearLayout>
        <LinearLayout
            n1:gravity="center_vertical"
            n1:orientation="horizontal"
            n1:id="@id/layout_calibration_z_axis"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginEnd="@dimen/calibration_axis_margin">
            <ImageView
                n1:id="@id/icon_z_axis"
                n1:layout_width="@dimen/settings_checkbox_size"
                n1:layout_height="@dimen/settings_checkbox_size"
                n1:src="@drawable/calibration_checkbox"
                n1:layout_marginEnd="@dimen/calibration_checkbox_margin" />
            <TextView
                n1:textSize="@dimen/settings_text_size"
                n1:layout_gravity="center_vertical"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:text="@string/calibration_z_axis"
                n1:textAllCaps="true" />
        </LinearLayout>
        <LinearLayout
            n1:gravity="center_vertical"
            n1:orientation="horizontal"
            n1:id="@id/layout_calibration_y_axis"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginEnd="@dimen/calibration_axis_margin">
            <ImageView
                n1:id="@id/icon_y_axis"
                n1:layout_width="@dimen/settings_checkbox_size"
                n1:layout_height="@dimen/settings_checkbox_size"
                n1:src="@drawable/calibration_checkbox"
                n1:layout_marginEnd="@dimen/calibration_checkbox_margin" />
            <TextView
                n1:textSize="@dimen/settings_text_size"
                n1:layout_gravity="center_vertical"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:text="@string/calibration_y_axis"
                n1:textAllCaps="true" />
        </LinearLayout>
        <LinearLayout
            n1:gravity="center_vertical"
            n1:orientation="horizontal"
            n1:id="@id/layout_calibration_x_axis"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content">
            <ImageView
                n1:id="@id/icon_x_axis"
                n1:layout_width="@dimen/settings_checkbox_size"
                n1:layout_height="@dimen/settings_checkbox_size"
                n1:src="@drawable/calibration_checkbox"
                n1:layout_marginEnd="@dimen/calibration_checkbox_margin" />
            <TextView
                n1:textSize="@dimen/settings_text_size"
                n1:layout_gravity="center_vertical"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:text="@string/calibration_x_axis"
                n1:textAllCaps="true" />
        </LinearLayout>
    </LinearLayout>
    <Button
        n1:layout_gravity="center_horizontal"
        n1:id="@id/button_calibrate"
        n1:background="@drawable/button_selector"
        n1:visibility="gone"
        n1:nextFocusLeft="@id/backbutton"
        n1:nextFocusRight="@id/backbutton"
        n1:nextFocusUp="@id/backbutton"
        n1:nextFocusDown="@id/backbutton"
        n1:layout_width="@dimen/settings_button_width"
        n1:layout_height="@dimen/settings_buttons_height"
        n1:layout_marginTop="@dimen/piloting_buttons_margin"
        n1:text="@string/calibration_calibrate"
        n1:nextFocusForward="@id/backbutton" />
    <Button
        n1:layout_gravity="center_horizontal"
        n1:id="@id/button_landing"
        n1:background="@drawable/button_selector"
        n1:visibility="gone"
        n1:layout_width="@dimen/settings_button_width"
        n1:layout_height="@dimen/settings_buttons_height"
        n1:layout_marginTop="@dimen/piloting_buttons_margin"
        n1:text="@string/calibration_landing" />
</FrameLayout>