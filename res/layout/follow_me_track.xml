<?xml version="1.0" encoding="utf-8"?>
<merge>
    <FrameLayout
        n1:id="@id/layout_text_left"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_centerVertical="true"
        n1:layout_alignParentStart="true"
        xmlns:n1="http://schemas.android.com/apk/res/android">
        <TextView
            n1:textSize="@dimen/follow_me_lock_button_text_size"
            n1:textColor="@color/transparent_white"
            n1:gravity="center_horizontal"
            n1:layout_gravity="start"
            n1:id="@id/text_left"
            n1:layout_width="@dimen/follow_me_lock_button_width"
            n1:layout_height="wrap_content"
            n1:maxLines="1"
            n1:textAllCaps="true"
            n1:paddingEnd="@dimen/piloting_button_size" />
    </FrameLayout>
    <FrameLayout
        n2:id="@id/layout_text_right"
        n2:layout_width="wrap_content"
        n2:layout_height="wrap_content"
        n2:layout_centerVertical="true"
        n2:layout_alignParentEnd="true"
        xmlns:n2="http://schemas.android.com/apk/res/android">
        <TextView
            n2:textSize="@dimen/follow_me_lock_button_text_size"
            n2:textColor="@color/transparent_white"
            n2:gravity="center_horizontal"
            n2:layout_gravity="end"
            n2:id="@id/text_right"
            n2:layout_width="@dimen/follow_me_lock_button_width"
            n2:layout_height="wrap_content"
            n2:maxLines="1"
            n2:textAllCaps="true"
            n2:paddingStart="@dimen/piloting_button_size" />
    </FrameLayout>
    <ImageView
        n3:id="@id/image_thumb"
        n3:duplicateParentState="true"
        n3:layout_width="@dimen/piloting_button_size"
        n3:layout_height="@dimen/piloting_button_size"
        n3:scaleType="centerInside"
        xmlns:n3="http://schemas.android.com/apk/res/android" />
</merge>