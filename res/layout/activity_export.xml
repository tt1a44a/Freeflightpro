<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        n1:id="@id/export_toolbar_layout"
        n1:layout_width="fill_parent"
        n1:layout_height="@dimen/director_toolbar_height"
        n1:paddingStart="@dimen/director_window_padding"
        n1:paddingEnd="@dimen/director_window_padding">
        <TextView
            n1:textSize="@dimen/director_title_size"
            n1:textColor="@color/white"
            n1:id="@id/export_toolbar_title"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:text="@string/flight_director_export_title"
            n1:shadowColor="@color/white"
            n1:layout_centerHorizontal="true"
            n1:layout_centerVertical="true" />
        <Button
            n1:textSize="@dimen/export_top_button_size"
            n1:id="@id/export_cancel_button"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:text="@string/flight_director_common_cancel"
            n1:layout_centerVertical="true"
            n1:layout_alignParentEnd="true"
            style="@style/SmallButton" />
        <Button
            n1:textSize="@dimen/export_top_button_size"
            n1:id="@id/export_continue_button"
            n1:visibility="gone"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:text="@string/flight_director_export_continue"
            n1:layout_centerVertical="true"
            n1:layout_alignParentEnd="true"
            style="@style/SmallButton" />
    </RelativeLayout>
    <LinearLayout
        n1:gravity="center"
        n1:orientation="vertical"
        n1:id="@id/export_progress_layout"
        n1:visibility="visible"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent">
        <ImageView
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:src="@drawable/export_generating"
            n1:contentDescription="@null" />
        <TextView
            n1:textColor="@color/white"
            n1:id="@id/export_progress_text"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginTop="@dimen/export_progress_margin"
            n1:layout_marginBottom="10.0dip" />
        <ProgressBar
            n1:id="@id/export_progress_bar"
            n1:layout_width="@dimen/export_progress_width"
            n1:layout_height="@dimen/export_progress_height"
            n1:max="100"
            n1:progressDrawable="@drawable/slider_progress_bar"
            style="?android:progressBarStyleHorizontal" />
    </LinearLayout>
    <RelativeLayout
        n1:gravity="center"
        n1:id="@id/export_completed_layout"
        n1:visibility="gone"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent">
        <ImageView
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:src="@drawable/ic_check_completed"
            n1:layout_above="@id/export_completed_title_layout"
            n1:layout_centerHorizontal="true"
            n1:contentDescription="@null" />
        <LinearLayout
            n1:gravity="center"
            n1:orientation="vertical"
            n1:id="@id/export_completed_title_layout"
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:layout_marginTop="@dimen/export_completed_margin"
            n1:layout_centerInParent="true">
            <TextView
                n1:textSize="@dimen/export_title_size"
                n1:textColor="@color/green"
                n1:gravity="center"
                n1:id="@id/export_completed_title"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="8.0dip"
                n1:text="@string/flight_director_export_completed"
                n1:textAllCaps="true" />
            <TextView
                n1:textSize="@dimen/export_desc_size"
                n1:textColor="@color/white"
                n1:gravity="center"
                n1:id="@id/export_completed_description"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:text="@string/flight_director_export_completed_dec" />
        </LinearLayout>
        <LinearLayout
            n1:orientation="horizontal"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginTop="@dimen/export_share_margin"
            n1:layout_below="@id/export_completed_title_layout"
            n1:layout_centerHorizontal="true">
            <Button
                n1:textSize="@dimen/export_share_size"
                n1:textColor="@color/white"
                n1:gravity="center"
                n1:id="@id/export_share_video"
                n1:background="@drawable/button_selector"
                n1:layout_width="wrap_content"
                n1:layout_height="@dimen/settings_buttons_height"
                n1:minWidth="@dimen/drone_infos_button_min_width"
                n1:text="@string/flight_director_export_share"
                n1:paddingStart="@dimen/export_share_padding"
                n1:paddingEnd="@dimen/export_share_padding" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>