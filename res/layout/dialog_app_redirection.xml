<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    n1:gravity="center"
    n1:layout_gravity="center"
    n1:orientation="horizontal"
    n1:layout_width="wrap_content"
    n1:layout_height="wrap_content"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <LinearLayout
        n1:orientation="vertical"
        n1:id="@id/layout_jumping"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_margin="@dimen/dialog_redirection_margin">
        <ImageButton
            n1:layout_gravity="center"
            n1:id="@id/button_jumping"
            n1:background="@drawable/freeflight_jumping"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_margin="@dimen/dialog_redirection_margin" />
        <TextView
            n1:textColor="@android:color/black"
            n1:layout_gravity="center"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:text="@string/freeflight_jumping" />
    </LinearLayout>
    <LinearLayout
        n1:orientation="vertical"
        n1:id="@id/layout_minidrone"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_margin="@dimen/dialog_redirection_margin">
        <ImageButton
            n1:layout_gravity="center"
            n1:id="@id/button_minidrone"
            n1:background="@drawable/freeflight_mini"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_margin="@dimen/dialog_redirection_margin" />
        <TextView
            n1:textColor="@android:color/black"
            n1:layout_gravity="center"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:text="@string/freeflight_minidrone" />
    </LinearLayout>
</LinearLayout>