<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        n1:id="@id/layout_reframing_available_zone"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_centerInParent="true">
        <RelativeLayout
            n1:id="@id/layout_reframing_selected_zone"
            n1:background="@android:color/transparent"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_centerInParent="true">
            <View
                n1:id="@id/layout_reframing_moving_frame"
                n1:background="@drawable/rounded_rectangle_moving_frame"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:layout_centerInParent="true" />
            <ImageView
                n1:id="@id/image_reframing_moving_frame_left_arrow"
                n1:layout_width="@dimen/follow_me_reframing_zone_arrow_size"
                n1:layout_height="@dimen/follow_me_reframing_zone_arrow_size"
                n1:src="@drawable/key_edit_arrow_left"
                n1:scaleType="centerInside"
                n1:layout_alignParentLeft="true"
                n1:layout_centerVertical="true" />
            <ImageView
                n1:id="@id/image_reframing_moving_frame_right_arrow"
                n1:layout_width="@dimen/follow_me_reframing_zone_arrow_size"
                n1:layout_height="@dimen/follow_me_reframing_zone_arrow_size"
                n1:src="@drawable/key_edit_arrow_right"
                n1:scaleType="centerInside"
                n1:layout_alignParentRight="true"
                n1:layout_centerVertical="true" />
            <ImageView
                n1:id="@id/image_reframing_moving_frame_top_arrow"
                n1:layout_width="@dimen/follow_me_reframing_zone_arrow_size"
                n1:layout_height="@dimen/follow_me_reframing_zone_arrow_size"
                n1:src="@drawable/key_edit_arrow_up"
                n1:scaleType="centerInside"
                n1:layout_alignParentTop="true"
                n1:layout_centerHorizontal="true" />
            <ImageView
                n1:id="@id/image_reframing_moving_frame_bottom_arrow"
                n1:layout_width="@dimen/follow_me_reframing_zone_arrow_size"
                n1:layout_height="@dimen/follow_me_reframing_zone_arrow_size"
                n1:src="@drawable/key_edit_arrow_down"
                n1:scaleType="centerInside"
                n1:layout_alignParentBottom="true"
                n1:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        n1:background="@color/transparent_black"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:layout_toStartOf="@id/layout_reframing_available_zone" />
    <View
        n1:background="@color/transparent_black"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:layout_toEndOf="@id/layout_reframing_available_zone" />
    <View
        n1:background="@color/transparent_black"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:layout_above="@id/layout_reframing_available_zone"
        n1:layout_alignStart="@id/layout_reframing_available_zone"
        n1:layout_alignEnd="@id/layout_reframing_available_zone" />
    <View
        n1:background="@color/transparent_black"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:layout_below="@id/layout_reframing_available_zone"
        n1:layout_alignStart="@id/layout_reframing_available_zone"
        n1:layout_alignEnd="@id/layout_reframing_available_zone" />
</RelativeLayout>