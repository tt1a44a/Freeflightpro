<?xml version="1.0" encoding="utf-8"?>
<layer-list>
    <item
        n1:height="@dimen/drone_infos_battery_top_height"
        n1:left="@dimen/drone_infos_battery_third_of_width"
        n1:right="@dimen/drone_infos_battery_third_of_width"
        xmlns:n1="http://schemas.android.com/apk/res/android">
        <shape>
            <solid
                n1:color="@color/product_main_color" />
        </shape>
    </item>
    <item
        n2:id="@android:id/background"
        n2:height="@dimen/drone_infos_battery_height"
        n2:width="@dimen/drone_infos_battery_width"
        n2:top="@dimen/drone_infos_battery_top_height"
        xmlns:n2="http://schemas.android.com/apk/res/android">
        <shape>
            <solid
                n2:color="@color/tranparent_product_main_color" />
        </shape>
    </item>
    <item
        n3:id="@android:id/progress"
        n3:left="@dimen/drone_infos_battery_padding"
        n3:top="@dimen/drone_infos_battery_padding_plus_top_height"
        n3:right="@dimen/drone_infos_battery_padding"
        n3:bottom="@dimen/drone_infos_battery_padding"
        xmlns:n3="http://schemas.android.com/apk/res/android">
        <clip
            n3:gravity="bottom"
            n3:clipOrientation="vertical">
            <shape>
                <solid
                    n3:color="@color/product_main_color" />
            </shape>
        </clip>
    </item>
</layer-list>