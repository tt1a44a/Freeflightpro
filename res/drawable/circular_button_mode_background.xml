        n1:state_selected="true"
        xmlns:n1="http://schemas.android.com/apk/res/android">
        <shape
            n1:shape="oval">
            <solid
                n1:color="@color/white" />
            <stroke
                n1:width="1.0dip"
                n1:color="@color/piloting_button_outline_color" />
        </shape>
    </item>
    <item>
        <shape
            n2:shape="oval"
            xmlns:n2="http://schemas.android.com/apk/res/android">
            <solid
                n2:color="@color/piloting_recording_mode_background_unselected_color" />
            <stroke
                n2:width="1.0dip"
                n2:color="@color/piloting_button_outline_color" />
        </shape>
    </item>
</selector>