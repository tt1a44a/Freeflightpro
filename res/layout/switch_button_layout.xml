<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    n1:id="@id/switch_button_root_layout"
    n1:clipChildren="false"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <View
        n1:id="@id/view_switch_button_background"
        n1:background="@drawable/switch_button_background"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:alpha="0.0" />
    <LinearLayout
        n1:orientation="horizontal"
        n1:id="@id/layout_switch_button"
        n1:layout_width="wrap_content"
        n1:layout_height="fill_parent"
        n1:layout_centerInParent="true">
        <ImageView
            n1:id="@id/image_view_switch_button_left_arrow"
            n1:layout_width="@dimen/switch_button_default_arrow_width"
            n1:layout_height="fill_parent" />
        <ImageView
            n1:id="@id/image_view_switch_button"
            n1:background="@drawable/circular_button_background"
            n1:padding="@dimen/switch_button_default_image_padding"
            n1:layout_width="@dimen/switch_button_default_image_size"
            n1:layout_height="fill_parent" />
        <ImageView
            n1:id="@id/image_view_switch_button_right_arrow"
            n1:layout_width="@dimen/switch_button_default_arrow_width"
            n1:layout_height="fill_parent" />
    </LinearLayout>
</RelativeLayout>