<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    n1:background="@color/semi_transparent_dark_grey"
    n1:layout_width="fill_parent"
    n1:layout_height="48.0dip"
    n1:animateLayoutChanges="true"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        n1:gravity="center"
        n1:id="@id/layout_bar_content"
        n1:background="@drawable/ripple_effect"
        n1:paddingLeft="10.0dip"
        n1:paddingRight="10.0dip"
        n1:focusable="true"
        n1:clickable="true"
        n1:layout_width="fill_parent"
        n1:layout_height="@dimen/notification_bar_height">
        <TextView
            n1:textColor="@color/white"
            n1:id="@id/text_tag_view"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_centerVertical="true"
            n1:textAllCaps="true"
            n1:paddingStart="@dimen/announcements_tag_vertical_padding"
            n1:paddingEnd="@dimen/announcements_tag_vertical_padding"
            n1:layout_marginEnd="@dimen/notification_tag_horizontal_margin"
            n1:layout_alignParentStart="true" />
        <TextView
            n1:textColor="@color/white"
            n1:ellipsize="end"
            n1:id="@id/text_title_view"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:maxLines="1"
            n1:layout_centerVertical="true"
            n1:layout_toEndOf="@id/text_tag_view" />
        <TextView
            n1:textColor="@color/white"
            n1:ellipsize="end"
            n1:id="@id/text_subtitle_view"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:maxLines="1"
            n1:layout_centerVertical="true"
            n1:layout_marginStart="@dimen/notification_horizontal_margin"
            n1:layout_toStartOf="@id/button_close"
            n1:layout_toEndOf="@id/text_title_view" />
        <ImageButton
            n1:gravity="center_vertical"
            n1:id="@id/button_close"
            n1:background="@drawable/ripple_effect_round_corner"
            n1:layout_width="@dimen/notification_close_button_size"
            n1:layout_height="@dimen/notification_close_button_size"
            n1:src="@drawable/ic_animation_close"
            n1:layout_centerVertical="true"
            n1:layout_marginStart="@dimen/notification_horizontal_margin"
            n1:layout_alignParentEnd="true" />
    </RelativeLayout>
</FrameLayout>