<?xml version="1.0" encoding="utf-8"?>
<animation-list
    n1:oneshot="true"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <item
        n1:duration="0">
        <layer-list>
            <item>
                <shape>
                    <solid
                        n1:color="#00000000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        n1:duration="1000">
        <layer-list>
            <item
                n1:gravity="center">
                <bitmap
                    n1:gravity="center"
                    n1:src="@drawable/timer_count_down_3" />
            </item>
        </layer-list>
    </item>
    <item
        n1:duration="1000">
        <layer-list>
            <item
                n1:gravity="center">
                <bitmap
                    n1:gravity="center"
                    n1:src="@drawable/timer_count_down_2" />
            </item>
        </layer-list>
    </item>
    <item
        n1:duration="1000">
        <layer-list>
            <item
                n1:gravity="center">
                <bitmap
                    n1:gravity="center"
                    n1:src="@drawable/timer_count_down_1" />
            </item>
        </layer-list>
    </item>
    <item
        n1:duration="150">
        <shape>
            <solid
                n1:color="@color/white" />
        </shape>
    </item>
</animation-list>