<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    n1:orientation="vertical"
    n1:background="@drawable/item_background_selector"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    n1:layout_marginTop="@dimen/settings_space_between_widget"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <FrameLayout
        n1:orientation="horizontal"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_marginTop="@dimen/settings_space_between_widget">
        <ImageView
            n1:layout_gravity="center"
            n1:id="@id/icon"
            n1:background="@null"
            n1:focusable="false"
            n1:clickable="false"
            n1:layout_width="@dimen/settings_category_button_size"
            n1:layout_height="@dimen/settings_category_button_size"
            n1:scaleType="centerInside" />
        <ImageView
            n1:layout_gravity="center|right"
            n1:id="@id/arrow"
            n1:layout_width="5.0dip"
            n1:layout_height="10.0dip"
            n1:src="@drawable/common_icn_left_arrow"
            n1:scaleType="fitXY" />
    </FrameLayout>
    <TextView
        n1:gravity="center"
        n1:id="@id/label"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_marginTop="@dimen/settings_margin_tiny"
        n1:singleLine="true" />
</LinearLayout>