<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    n1:id="@id/hud_piloting_joysticks"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <com.parrot.freeflight.piloting.widget.Joystick
        n1:id="@id/jc_leftjoystick"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_marginLeft="@dimen/bottom_bar_height"
        n1:layout_marginBottom="@dimen/bottom_bar_height"
        n1:layout_alignParentLeft="true"
        n1:layout_alignParentBottom="true"
        n2:jresetOnRelease="true"
        xmlns:n2="http://schemas.android.com/apk/res-auto" />
    <com.parrot.freeflight.piloting.widget.Joystick
        n1:id="@id/jc_rightjoystick"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_marginRight="@dimen/bottom_bar_height"
        n1:layout_marginBottom="@dimen/bottom_bar_height"
        n1:layout_alignParentRight="true"
        n1:layout_alignParentBottom="true"
        n3:jresetOnRelease="true"
        xmlns:n3="http://schemas.android.com/apk/res-auto" />
    <View
        n1:id="@id/jc_center"
        n1:layout_width="0.0dip"
        n1:layout_height="0.0dip"
        n1:layout_centerHorizontal="true" />
    <FrameLayout
        n1:id="@id/jc_lefttouchframe"
        n1:layout_width="0.0dip"
        n1:layout_height="fill_parent"
        n1:layout_toLeftOf="@id/jc_center"
        n1:layout_alignParentLeft="true" />
    <FrameLayout
        n1:id="@id/jc_righttouchframe"
        n1:layout_width="0.0dip"
        n1:layout_height="fill_parent"
        n1:layout_toRightOf="@id/jc_center"
        n1:layout_alignParentRight="true" />
</RelativeLayout>