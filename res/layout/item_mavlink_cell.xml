<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    n1:orientation="vertical"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    n1:foreground="@drawable/background_mavlink_item"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <com.parrot.freeflight.flightplan.mavlink.ui.SquareImageView
        n1:id="@id/image_map"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content" />
    <TextView
        n1:textSize="@dimen/list_row_text_size_primary"
        n1:textColor="@color/white"
        n1:id="@id/text_title"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:singleLine="true"
        n1:layout_toLeftOf="@id/text_product"
        n1:layout_below="@id/image_map"
        n1:paddingStart="@dimen/mavlink_item_padding"
        n1:paddingEnd="@dimen/mavlink_item_padding"
        n1:layout_alignParentStart="true" />
    <TextView
        n1:textSize="@dimen/list_row_text_size_secondary"
        n1:textColor="@color/white"
        n1:gravity="end|center"
        n1:id="@id/text_product"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:singleLine="true"
        n1:layout_alignTop="@id/text_title"
        n1:layout_alignBottom="@id/text_title"
        n1:paddingStart="@dimen/mavlink_item_padding"
        n1:paddingEnd="@dimen/mavlink_item_padding"
        n1:layout_alignParentEnd="true" />
    <TextView
        n1:textSize="@dimen/list_row_text_size_secondary"
        n1:textColor="@color/white"
        n1:id="@id/text_date"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_below="@id/text_title"
        n1:paddingStart="@dimen/mavlink_item_padding"
        n1:paddingEnd="@dimen/mavlink_item_padding" />
</RelativeLayout>