<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    n1:orientation="vertical"
    n1:padding="@dimen/settings_padding_row"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <LinearLayout
        n1:gravity="center_vertical"
        n1:orientation="horizontal"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content">
        <LinearLayout
            n1:gravity="center_vertical"
            n1:layout_width="@dimen/settings_name_width"
            n1:layout_height="wrap_content"
            n1:layout_marginEnd="@dimen/settings_name_right_margin">
            <ImageView
                n1:id="@id/image_view_icon"
                n1:layout_width="@dimen/settings_fpv_icon_size"
                n1:layout_height="@dimen/settings_fpv_icon_size"
                n1:src="@drawable/settings_fpv_foreground"
                n1:layout_marginEnd="@dimen/settings_fpv_icon_margin" />
            <TextView
                n1:textSize="@dimen/settings_title_size"
                n1:textColor="@color/white"
                n1:id="@id/text_view_name"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:text="@string/fpv" />
        </LinearLayout>
        <RadioGroup
            n1:orientation="horizontal"
            n1:id="@id/radiogroup_fpv_mode"
            n1:layout_width="0.0dip"
            n1:layout_height="wrap_content"
            n1:layout_weight="0.8">
            <RadioButton
                n1:textSize="@dimen/settings_text_size"
                n1:textColor="@drawable/settings_text_color_selector"
                n1:gravity="center"
                n1:id="@id/radio_fpv_mode_manual"
                n1:background="@drawable/radio_button_left_selector"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:button="@android:color/transparent"
                n1:text="@string/piloting_settings_network_manual"
                n1:layout_weight="1.0"
                n1:textAllCaps="true" />
            <RadioButton
                n1:textSize="@dimen/settings_text_size"
                n1:textColor="@drawable/settings_text_color_selector"
                n1:gravity="center"
                n1:id="@id/radio_fpv_mode_auto"
                n1:background="@drawable/radio_button_right_selector"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:button="@android:color/transparent"
                n1:text="@string/auto"
                n1:layout_weight="1.0"
                n1:textAllCaps="true" />
        </RadioGroup>
        <Button
            n1:textSize="@dimen/settings_text_size"
            n1:textColor="@drawable/settings_text_color_selector"
            n1:gravity="center"
            n1:id="@id/button_configure"
            n1:background="@drawable/settings_button_selector"
            n1:paddingLeft="@dimen/settings_padding"
            n1:paddingRight="@dimen/settings_padding"
            n1:layout_width="wrap_content"
            n1:layout_height="@dimen/settings_buttons_height"
            n1:text="@string/configure"
            n1:layout_weight="0.2"
            n1:layout_marginStart="@dimen/settings_padding_row" />
    </LinearLayout>
    <LinearLayout
        n1:gravity="center_vertical"
        n1:orientation="horizontal"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_marginTop="@dimen/settings_padding_row">
        <TextView
            n1:textSize="@dimen/settings_text_size"
            n1:textColor="@color/white"
            n1:id="@id/text_glasses_type"
            n1:layout_width="@dimen/settings_name_width"
            n1:layout_height="wrap_content"
            n1:text="@string/piloting_settings_eyeglass_model"
            n1:layout_marginEnd="@dimen/settings_name_right_margin" />
        <RadioGroup
            n1:orientation="horizontal"
            n1:id="@id/radiogroup_glasses_type"
            n1:layout_width="0.0dip"
            n1:layout_height="wrap_content"
            n1:layout_weight="0.8">
            <RadioButton
                n1:textSize="@dimen/settings_text_size"
                n1:textColor="@drawable/settings_text_color_selector"
                n1:gravity="center"
                n1:id="@id/radio_glasses_type_1"
                n1:background="@drawable/radio_button_left_selector"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:button="@android:color/transparent"
                n1:text="@string/piloting_settings_cockpitglasse1"
                n1:layout_weight="1.0"
                n1:textAllCaps="true" />
            <RadioButton
                n1:textSize="@dimen/settings_text_size"
                n1:textColor="@drawable/settings_text_color_selector"
                n1:gravity="center"
                n1:id="@id/radio_glasses_type_2"
                n1:background="@drawable/radio_button_right_selector"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:button="@android:color/transparent"
                n1:text="@string/piloting_settings_cockpitglasse2"
                n1:layout_weight="1.0"
                n1:textAllCaps="true" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>