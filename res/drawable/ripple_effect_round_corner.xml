<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item
        n1:state_pressed="true"
        xmlns:n1="http://schemas.android.com/apk/res/android">
        <shape
            n1:shape="rectangle">
            <solid
                n1:color="@color/card_pressed" />
            <corners
                n1:radius="@dimen/background_ripple_round_corner" />
        </shape>
    </item>
    <item
        n2:state_focused="true"
        xmlns:n2="http://schemas.android.com/apk/res/android">
        <shape
            n2:shape="rectangle">
            <solid
                n2:color="@color/card_focused" />
            <corners
                n2:radius="@dimen/background_ripple_round_corner" />
        </shape>
    </item>
    <item>
        <shape
            n3:shape="rectangle"
            xmlns:n3="http://schemas.android.com/apk/res/android">
            <solid
                n3:color="@android:color/transparent" />
            <corners
                n3:radius="@dimen/background_ripple_round_corner" />
        </shape>
    </item>
</selector>