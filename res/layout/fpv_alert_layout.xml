<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    n1:gravity="end|center"
    n1:orientation="horizontal"
    n1:id="@id/layout_alert"
    n1:background="@drawable/hud_alert_background"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <TextView
        n1:textSize="@dimen/fpv_text_size"
        n1:textColor="@color/white"
        n1:gravity="center"
        n1:id="@id/textview_alert"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:singleLine="true"
        n1:layout_marginEnd="@dimen/fpv_icon_margin" />
    <ImageView
        n1:id="@id/imageview_alert"
        n1:layout_width="@dimen/fpv_icon_size"
        n1:layout_height="@dimen/fpv_icon_size"
        n1:src="@drawable/academy_icn_crash"
        n1:tint="@color/white" />
</LinearLayout>