<?xml version="1.0" encoding="utf-8"?>
<selector
    n1:shape="rectangle"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <item
        n1:state_pressed="false">
        <shape
            n1:shape="rectangle">
            <corners
                n1:radius="5.0dip" />
            <solid
                n1:color="@color/gamepad_item_background_grey" />
        </shape>
    </item>
    <item
        n1:state_pressed="true">
        <shape
            n1:shape="rectangle">
            <corners
                n1:radius="5.0dip" />
            <solid
                n1:color="@color/gamepad_item_background_grey_pressed" />
        </shape>
    </item>
</selector>