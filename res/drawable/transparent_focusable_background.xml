<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item
        n1:state_focused="true"
        n1:state_enabled="true"
        n1:state_pressed="false"
        xmlns:n1="http://schemas.android.com/apk/res/android">
        <shape
            n1:shape="oval">
            <solid
                n1:color="@color/focus_color" />
        </shape>
    </item>
    <item
        n2:state_pressed="true"
        xmlns:n2="http://schemas.android.com/apk/res/android">
        <shape
            n2:shape="oval">
            <solid
                n2:color="@color/piloting_button_pressed_bg_color" />
        </shape>
    </item>
    <item>
        <shape
            n3:shape="oval"
            xmlns:n3="http://schemas.android.com/apk/res/android">
            <solid
                n3:color="@android:color/transparent" />
        </shape>
    </item>
</selector>