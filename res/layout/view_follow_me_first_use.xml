<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    n1:gravity="center"
    n1:orientation="vertical"
    n1:id="@id/popover_first_use_layout"
    n1:background="@drawable/transparent_border_background"
    n1:clickable="true"
    n1:layout_width="wrap_content"
    n1:layout_height="wrap_content"
    n1:minWidth="@dimen/follow_me_first_use_width"
    n1:minHeight="@dimen/follow_me_first_use_height"
    n1:paddingStart="@dimen/follow_me_first_use_horizontal_padding"
    n1:paddingEnd="@dimen/follow_me_first_use_horizontal_padding"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <TextView
        n1:textSize="@dimen/follow_me_first_use_text"
        n1:textColor="@color/green"
        n1:id="@id/text_first_use_title"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:text="@string/follow_me_help_title" />
    <TextView
        n1:gravity="center"
        n1:id="@id/popover_first_use_description"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:text="@string/follow_me_help_description" />
    <ImageView
        n1:id="@id/image_follow_me_selection_animation"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_marginTop="@dimen/follow_me_first_use_margin"
        n1:minWidth="@dimen/hand_launch_piloting_alert_min_width"
        n1:minHeight="@dimen/hand_launch_piloting_alert_min_height" />
    <Button
        n1:textColor="@color/colorAccent"
        n1:layout_gravity="center_horizontal"
        n1:id="@id/button_follow_me_first_use"
        n1:background="@drawable/button_selector"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_marginTop="@dimen/follow_me_first_use_margin"
        n1:text="@string/got_it"
        n1:paddingStart="@dimen/gamepad_mapping_button_padding"
        n1:paddingEnd="@dimen/gamepad_mapping_button_padding"
        style="@style/SettingsButton" />
</LinearLayout>