<?xml version="1.0" encoding="utf-8"?>
<set
    n1:interpolator="@android:anim/linear_interpolator"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <scale
        n1:duration="100"
        n1:pivotX="50.0%"
        n1:pivotY="50.0%"
        n1:fillBefore="false"
        n1:fromXScale="0.0"
        n1:toXScale="1.0"
        n1:fromYScale="0.0"
        n1:toYScale="1.0" />
    <alpha
        n1:duration="150"
        n1:fromAlpha="0.0"
        n1:toAlpha="1.0" />
</set>