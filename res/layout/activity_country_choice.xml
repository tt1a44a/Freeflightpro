<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <TextView
        n1:textSize="@dimen/toolbar_text_size"
        n1:textColor="@color/white"
        n1:id="@id/text_title"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_marginTop="@dimen/settings_space_between_widget"
        n1:text="@string/wifi_settings"
        n1:layout_centerHorizontal="true" />
    <TextView
        n1:textColor="@color/white"
        n1:id="@id/text_detail"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_marginTop="@dimen/toolbar_side_padding"
        n1:layout_marginBottom="@dimen/toolbar_side_padding"
        n1:text="@string/wifi_specify_country"
        n1:layout_below="@id/text_title"
        n1:layout_centerHorizontal="true" />
    <TextView
        n1:textSize="@dimen/toolbar_text_size"
        n1:textColor="@color/white"
        n1:id="@id/text_cancel"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:text="@string/cancel"
        n1:layout_alignTop="@id/text_title"
        n1:layout_marginEnd="@dimen/settings_space_between_widget"
        n1:layout_alignParentEnd="true" />
    <ListView
        n1:id="@id/list_wifi_country"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:layout_above="@id/button_ok"
        n1:layout_below="@id/text_detail"
        n1:layout_centerHorizontal="true"
        n1:foregroundGravity="center" />
    <Button
        n1:textSize="@dimen/toolbar_text_size"
        n1:id="@id/button_ok"
        n1:background="@drawable/button_selector"
        n1:layout_width="wrap_content"
        n1:layout_height="@dimen/settings_buttons_height"
        n1:layout_marginTop="@dimen/toolbar_side_padding"
        n1:layout_marginBottom="@dimen/toolbar_side_padding"
        n1:text="@string/ok"
        n1:layout_alignParentBottom="true"
        n1:layout_centerHorizontal="true" />
</RelativeLayout>