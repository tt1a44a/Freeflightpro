<?xml version="1.0" encoding="utf-8"?>
<com.parrot.freeflight.piloting.widget.HudProgressButtonView
    n1:background="@drawable/circular_button_background"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <TextView
        n1:textSize="@dimen/toolbar_text_size"
        n1:textColor="@android:color/white"
        n1:gravity="center"
        n1:id="@id/hud_progress_button_text"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent" />
    <ImageView
        n1:id="@id/hud_progress_button_image"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:scaleType="centerInside" />
    <ProgressBar
        n1:id="@id/hud_progress_button_loading"
        n1:visibility="gone"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:max="100"
        style="@style/Widget.ProgressBar.Circular" />
</com.parrot.freeflight.piloting.widget.HudProgressButtonView>