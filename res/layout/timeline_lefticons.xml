<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    n1:orientation="vertical"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:layout_marginTop="@dimen/timeline_waypoint_radius"
    n1:layout_marginBottom="@dimen/timeline_waypoint_radius_fivefold"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <LinearLayout
        n1:background="#7fffffff"
        n1:layout_width="fill_parent"
        n1:layout_height="0.0dip"
        n1:layout_weight="1.0">
        <ImageView
            n1:layout_gravity="center_vertical"
            n1:layout_width="@dimen/timeline_left_icon_height"
            n1:layout_height="@dimen/timeline_left_icon_height"
            n1:layout_marginLeft="@dimen/timeline_action_parameter_padding"
            n1:layout_marginRight="@dimen/timeline_action_parameter_padding"
            n1:src="@drawable/flightplan_tl_icn_photovideo" />
    </LinearLayout>
    <LinearLayout
        n1:background="#7f666666"
        n1:layout_width="fill_parent"
        n1:layout_height="0.0dip"
        n1:layout_weight="3.0">
        <ImageView
            n1:layout_gravity="center_vertical"
            n1:layout_width="@dimen/timeline_left_icon_height"
            n1:layout_height="@dimen/timeline_left_icon_height"
            n1:layout_marginLeft="@dimen/timeline_action_parameter_padding"
            n1:layout_marginRight="@dimen/timeline_action_parameter_padding"
            n1:src="@drawable/flightplan_tl_icn_rotate" />
    </LinearLayout>
    <LinearLayout
        n1:background="#7fffffff"
        n1:layout_width="fill_parent"
        n1:layout_height="0.0dip"
        n1:layout_weight="3.0">
        <ImageView
            n1:layout_gravity="center_vertical"
            n1:layout_width="@dimen/timeline_left_icon_height"
            n1:layout_height="@dimen/timeline_left_icon_height"
            n1:layout_marginLeft="@dimen/timeline_action_parameter_padding"
            n1:layout_marginRight="@dimen/timeline_action_parameter_padding"
            n1:src="@drawable/flightplan_tl_icn_tilt" />
    </LinearLayout>
</LinearLayout>