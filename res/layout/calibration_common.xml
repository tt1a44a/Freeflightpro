<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    n1:background="@android:color/transparent"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <ImageButton
        n1:id="@id/backbutton"
        n1:background="@drawable/circular_button_background"
        n1:nextFocusLeft="@id/button_calibrate"
        n1:nextFocusRight="@id/button_calibrate"
        n1:nextFocusUp="@id/button_calibrate"
        n1:nextFocusDown="@id/button_calibrate"
        n1:layout_width="@dimen/piloting_button_size"
        n1:layout_height="@dimen/piloting_button_size"
        n1:layout_marginTop="@dimen/piloting_buttons_margin"
        n1:src="@drawable/drawable_hud_back"
        n1:scaleType="centerInside"
        n1:layout_alignParentTop="true"
        n1:contentDescription="@string/piloting_cd_go_back"
        n1:nextFocusForward="@id/button_calibrate"
        n1:layout_marginStart="@dimen/piloting_buttons_margin"
        n1:layout_alignParentStart="true" />
    <TextView
        n1:textSize="@dimen/settings_text_size"
        n1:gravity="center"
        n1:id="@id/text_main_title_label"
        n1:layout_width="fill_parent"
        n1:layout_height="@dimen/piloting_button_size"
        n1:text="@string/calibration_calibrate"
        n1:layout_alignTop="@id/backbutton"
        n1:textAllCaps="true" />
    <TextView
        n1:textSize="@dimen/settings_text_size"
        n1:gravity="center"
        n1:id="@id/text"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_alignParentBottom="true" />
    <ImageView
        n1:id="@id/image_calibration_common_view"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:scaleType="fitCenter"
        n1:adjustViewBounds="true"
        n1:layout_alignParentTop="true"
        n1:layout_alignParentBottom="true"
        n1:layout_centerHorizontal="true" />
</RelativeLayout>