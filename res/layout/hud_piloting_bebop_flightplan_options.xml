<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    n1:id="@id/hud_piloting_flightplan_options"
    n1:background="@color/black"
    n1:padding="16.0dip"
    n1:visibility="gone"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <TextView
        n1:textColor="@color/white"
        n1:id="@id/hud_piloting_flightplan_options_title"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:text="Plan options"
        n1:textAllCaps="true" />
    <TextView
        n1:textColor="@color/white"
        n1:id="@id/hud_piloting_flightplan_landing_last_waypoint_title"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_marginTop="24.0dip"
        n1:text="Landing on last way point"
        n1:layout_toLeftOf="@id/hud_piloting_flightplan_landing_last_waypoint"
        n1:layout_below="@id/hud_piloting_flightplan_options_title"
        n1:layout_alignParentLeft="true" />
    <include
        n1:id="@id/hud_piloting_flightplan_landing_last_waypoint"
        n1:layout_width="100.0dip"
        n1:layout_height="40.0dip"
        n1:layout_alignTop="@id/hud_piloting_flightplan_landing_last_waypoint_title"
        n1:layout_alignParentRight="true"
        layout="@layout/flightplan_options_toggle_view" />
    <TextView
        n1:textColor="@color/white"
        n1:id="@id/hud_piloting_flightplan_progressive_course_title"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_marginTop="40.0dip"
        n1:text="Landing on last way point"
        n1:layout_toLeftOf="@id/hud_piloting_flightplan_landing_last_waypoint"
        n1:layout_below="@id/hud_piloting_flightplan_landing_last_waypoint_title"
        n1:layout_alignParentLeft="true" />
    <include
        n1:id="@id/hud_piloting_flightplan_progressive_course"
        n1:layout_width="100.0dip"
        n1:layout_height="40.0dip"
        n1:layout_alignTop="@id/hud_piloting_flightplan_progressive_course_title"
        n1:layout_alignParentRight="true"
        layout="@layout/flightplan_options_toggle_view" />
</RelativeLayout>