<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    n1:id="@id/layout_root"
    n1:padding="@dimen/flightplan_edit_dialog_padding"
    n1:layout_width="@dimen/flightplan_edit_dialog_with"
    n1:layout_height="wrap_content"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <TextView
        n1:textSize="@dimen/flightplan_action_dialog_font_size"
        n1:id="@id/text_title"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content" />
    <LinearLayout
        n1:gravity="center"
        n1:orientation="horizontal"
        n1:id="@id/layout_property_edition"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_marginTop="@dimen/flightplan_edit_dialog_vertical_spacing"
        n1:layout_marginBottom="@dimen/flightplan_edit_dialog_vertical_spacing"
        n1:layout_below="@id/text_title">
        <TextView
            n1:id="@id/text_item_property"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content" />
        <EditText
            n1:id="@id/edit_item_property"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:inputType="numberDecimal"
            n1:paddingStart="@dimen/flightplan_action_dialog_padding_vertical"
            n1:paddingEnd="@dimen/flightplan_action_dialog_padding_vertical" />
        <TextView
            n1:id="@id/text_unit"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        n1:id="@id/button_ok"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:text="@string/ok"
        n1:layout_below="@id/layout_property_edition"
        n1:layout_alignParentEnd="true" />
</RelativeLayout>