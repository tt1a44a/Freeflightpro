<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    n1:gravity="center"
    n1:orientation="vertical"
    n1:background="@drawable/item_background_selector"
    n1:paddingLeft="@dimen/settings_padding_row"
    n1:paddingRight="@dimen/settings_padding_row"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <LinearLayout
        n1:gravity="center"
        n1:orientation="horizontal"
        n1:background="@drawable/item_background_selector"
        n1:layout_width="fill_parent"
        n1:layout_height="@dimen/settings_row_height">
        <TextView
            n1:textSize="@dimen/settings_title_size"
            n1:textColor="@color/white"
            n1:layout_gravity="start|center"
            n1:id="@id/text_view_name"
            n1:layout_width="@dimen/settings_name_width"
            n1:layout_height="wrap_content"
            n1:layout_marginEnd="@dimen/settings_name_right_margin" />
        <TextView
            n1:textSize="@dimen/settings_text_size"
            n1:textStyle="normal"
            n1:textColor="@color/transparent_white"
            n1:gravity="start|bottom|center"
            n1:id="@id/text_country"
            n1:background="@drawable/edit_text_selector"
            n1:clickable="true"
            n1:layout_width="fill_parent"
            n1:layout_height="@dimen/settings_buttons_height"
            n1:layout_weight="1.0"
            n1:layout_marginEnd="@dimen/settings_space_between_widget" />
        <CheckBox
            n1:textSize="@dimen/settings_text_size"
            n1:textStyle="normal"
            n1:textColor="@drawable/settings_text_color_selector"
            n1:gravity="center"
            n1:id="@id/checkbox_setting_outdoor"
            n1:background="@drawable/settings_button_selector"
            n1:paddingLeft="@dimen/settings_padding"
            n1:paddingRight="@dimen/settings_padding"
            n1:layout_width="fill_parent"
            n1:layout_height="@dimen/settings_buttons_height"
            n1:button="@android:color/transparent"
            n1:layout_weight="1.0"
            n1:textAllCaps="true"
            n1:layout_marginEnd="@dimen/settings_space_between_widget" />
    </LinearLayout>
    <com.parrot.freeflight.piloting.widget.ObjectPicker
        n1:id="@id/number_picker_country"
        n1:background="@drawable/rectangular_background"
        n1:visibility="gone"
        n1:descendantFocusability="blocksDescendants"
        n1:layout_width="wrap_content"
        n1:layout_height="fill_parent" />
</LinearLayout>