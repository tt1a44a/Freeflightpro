<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    n1:id="@id/layout_about_root"
    n1:background="@drawable/background"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <ImageButton
        n1:id="@id/button_about_back"
        n1:background="@drawable/circular_button_background"
        n1:layout_width="@dimen/piloting_button_size"
        n1:layout_height="@dimen/piloting_button_size"
        n1:layout_marginTop="@dimen/piloting_buttons_margin"
        n1:src="@drawable/drawable_hud_back"
        n1:scaleType="centerInside"
        n1:layout_marginStart="@dimen/piloting_buttons_margin" />
    <TextView
        n1:textSize="@dimen/home_title_text_size"
        n1:textColor="@color/white"
        n1:gravity="center"
        n1:id="@id/textview_about_title"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_marginTop="@dimen/about_title_margin_top"
        n1:text="@string/about_title"
        n1:layout_alignParentTop="true" />
    <LinearLayout
        n1:orientation="vertical"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_centerInParent="true">
        <TextView
            n1:gravity="center"
            n1:layout_gravity="center_horizontal"
            n1:id="@id/textview_about_version"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginTop="@dimen/about_item_vertical_margin"
            n1:layout_marginBottom="@dimen/about_item_vertical_margin" />
        <Button
            n1:gravity="center"
            n1:layout_gravity="center_horizontal"
            n1:id="@id/button_about_legal_mentions"
            n1:background="@drawable/button_selector"
            n1:paddingLeft="@dimen/about_button_horizontal_padding"
            n1:paddingRight="@dimen/about_button_horizontal_padding"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginTop="@dimen/about_item_vertical_separation_margin"
            n1:layout_marginBottom="@dimen/about_item_vertical_margin"
            n1:text="@string/about_legal_mentions"
            style="@style/SettingsButton" />
    </LinearLayout>
</RelativeLayout>