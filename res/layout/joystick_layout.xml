<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <ImageView
        n1:layout_gravity="center"
        n1:id="@id/joystick_background_image"
        n1:layout_width="@dimen/joystick_background_size"
        n1:layout_height="@dimen/joystick_background_size"
        n1:src="@drawable/common_joystick_direction_background"
        n1:scaleType="fitXY"
        n1:contentDescription="@null" />
    <ImageView
        n1:layout_gravity="center"
        n1:id="@id/joystick_foreground_image"
        n1:layout_width="@dimen/joystick_foreground_size"
        n1:layout_height="@dimen/joystick_foreground_size"
        n1:src="@drawable/common_joystick_foreground"
        n1:scaleType="fitCenter"
        n1:contentDescription="@null" />
</FrameLayout>