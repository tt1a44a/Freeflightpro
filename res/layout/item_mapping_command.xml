<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    n1:orientation="vertical"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        n1:id="@id/layout_gamepad_action"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:minHeight="@dimen/gamepad_mapping_item_height"
        n1:paddingStart="@dimen/gamepad_mapping_item_padding_sides"
        n1:paddingEnd="@dimen/gamepad_mapping_item_padding_sides">
        <TextView
            n1:textSize="@dimen/gamepad_mapping_item_text_size"
            n1:textColor="@color/white"
            n1:id="@id/text_command_name"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_centerVertical="true"
            n1:layout_toStartOf="@id/layout_associated_buttons"
            n1:layout_alignParentStart="true" />
        <LinearLayout
            n1:orientation="horizontal"
            n1:id="@id/layout_associated_buttons"
            n1:layout_width="wrap_content"
            n1:layout_height="fill_parent"
            n1:layout_centerVertical="true"
            n1:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
        n1:gravity="center"
        n1:orientation="vertical"
        n1:id="@id/layout_input_choice_list"
        n1:paddingTop="@dimen/gamepad_mapping_item_control_button_padding"
        n1:paddingBottom="@dimen/gamepad_mapping_item_control_button_padding"
        n1:visibility="gone"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:paddingStart="@dimen/gamepad_mapping_item_padding_sides"
        n1:paddingEnd="@dimen/gamepad_mapping_item_padding_sides" />
</LinearLayout>