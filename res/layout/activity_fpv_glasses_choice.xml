<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    n1:orientation="vertical"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <FrameLayout
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content">
        <ImageButton
            n1:layout_gravity="start|center"
            n1:id="@id/button_back"
            n1:background="@drawable/circular_button_background"
            n1:layout_width="@dimen/piloting_button_size"
            n1:layout_height="@dimen/piloting_button_size"
            n1:layout_margin="@dimen/piloting_buttons_margin"
            n1:src="@drawable/drawable_hud_back"
            n1:scaleType="centerInside" />
        <TextView
            n1:textSize="@dimen/home_title_text_size"
            n1:textColor="@color/white"
            n1:layout_gravity="center"
            n1:id="@id/text_title"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:text="@string/piloting_settings_choice" />
    </FrameLayout>
    <LinearLayout
        n1:orientation="horizontal"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent">
        <RelativeLayout
            n1:layout_width="0.0dip"
            n1:layout_height="fill_parent"
            n1:layout_weight="1.0">
            <RadioButton
                n1:id="@id/image_cockpit_glasses_1"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:button="@drawable/cockpit_glasses_1"
                n1:layout_centerInParent="true" />
            <TextView
                n1:textSize="@dimen/fpv_glasses_choice_button_text_size"
                n1:textColor="@color/white"
                n1:id="@id/text_cockpit_glasses_1"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="@dimen/fpv_glasses_choice_text_margin"
                n1:text="@string/piloting_settings_cockpitglasse1"
                n1:layout_alignBottom="@id/image_cockpit_glasses_1"
                n1:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            n1:layout_width="0.0dip"
            n1:layout_height="fill_parent"
            n1:layout_weight="1.0">
            <RadioButton
                n1:id="@id/image_cockpit_glasses_2"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:button="@drawable/cockpit_glasses_2"
                n1:layout_centerInParent="true" />
            <TextView
                n1:textSize="@dimen/fpv_glasses_choice_button_text_size"
                n1:textColor="@color/white"
                n1:id="@id/text_cockpit_glasses_2"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="@dimen/fpv_glasses_choice_text_margin"
                n1:text="@string/piloting_settings_cockpitglasse2"
                n1:layout_alignBottom="@id/image_cockpit_glasses_2"
                n1:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>